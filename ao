#!/data/data/com.termux/files/usr/bin/bash

echo "ðŸ”§ Installing Frida 16.5.6 for Termux"
echo ""

# Update packages
echo "[1/5] Updating Termux..."
pkg update -y && pkg upgrade -y

# Install dependencies
echo "[2/5] Installing dependencies..."
pkg install -y root-repo build-essential python python-pip git wget binutils openssl clang

# Upgrade pip
echo "[3/5] Upgrading pip..."
python -m pip install --upgrade pip setuptools wheel

# Clean old installations
echo "[4/5] Cleaning old Frida..."
pkg uninstall -y frida-python 2>/dev/null
pip uninstall -y frida frida-tools
pip cache purge

# Install Frida 16.5.6
echo "[5/5] Installing Frida 16.5.6..."
pip install --no-cache-dir frida==16.5.6
pip install --no-cache-dir frida-tools==12.3.0

# Verify
echo ""
echo "âœ… Installation complete!"
echo ""
echo "Installed version:"
frida --version
python -c "import frida; print('Python module:', frida.__version__)"
